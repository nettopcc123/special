@charset "UTF-8"
html {
    font-size: 13.33vw;
    height: 100%;
    padding: 0
    margin: 0
}
* {
    padding: 0
    margin: 0
}
.yhhd
    max-width 100%
    margin 0 auto 0
    background #e34748
    .hd-banner
        width 100%
        background url("../img/banner.jpg") center center no-repeat 
        background-size cover
        height 0
        padding-top 31%
        padding-bottom 10%
        font-size 0.24rem
        position relative
    .hd-wbg
       background url("../img/footer.jpg") center top repeat
       padding-bottom 1.6rem
       padding-top 0.6rem
    .hd-wrap
        width 1200px
        margin 0px auto
    .hd-tit
        font-size: 0.3rem
        text-align: center
        width 2.5rem
        height 0.5rem
        line-height 0.5rem
        background #ffd031
        color #ffffff
        border-radius 0.1rem 0.1rem 0px 0px
    .hd-hr
        margin-bottom 0.1rem
        color #ffd031
        border: #ffd031 2px solid;
    .hd-con
        padding 0.3rem
        background #ffffff
        margin-bottom 0.5rem
        overflow hidden
    .hd-codt
        font-size 0.2rem
        color #333333
        line-height 0.34rem
        p
            padding-bottom 0.1rem
            overflow hidden
            b
                float left
                max-width 15%
            span
                float left
                max-width 85%
                em
                    font-style normal
                    color #e34748
    .hd-pcHid
        display none 
    .hd-con01
        padding 0.3rem
        background #ffffff
        margin-bottom 0.5rem
    .hd-conw
        border-left 1px #dddddd solid
        border-right 1px #dddddd solid
        border-bottom 1px #dddddd solid
        overflow hidden
    .hd-ulCon
        width 25%
        float left
        overflow hidden
        color #c7b093
        li
            list-style none
            text-align center
            line-height 0.7rem
            font-size: 0.2rem 
            border-right 1px #dddddd solid
            border-top 1px #dddddd solid
            color #333333
            &:first-child
                background #ffd031
                color #333333
                font-weight bold
    .hd-ucw1
        width 14%
    .hd-ucw2
        width 22%
    .hd-ucw3
        width 14%
        li
            color #db1515
    .hd-ucw4
        width 22%
        li
            color #db1515
    .hd-ucw5
        width 14%
        li
            &:nth-child(2)
                line-height: 0.26rem
                padding 2.85rem 0
    .hd-ucw6
        width 14%
        li
            border-right none
            &:nth-child(2)
                line-height: 0.26rem
                padding 2.46rem 0 0
    .hd-crem
        padding 0.25rem 0 0.1rem
        color #666666
        font-size 0.2rem
        line-height 0.3rem
        clear both
        overflow hidden  
    .hd-gz
        width 94%
        margin: 0 auto
        li
            list-style circle
            color #333333
            font-size: 0.2rem
            line-height: 0.36rem
            list-style-type decimal
            padding-bottom: 0.08rem
@import "mob"

