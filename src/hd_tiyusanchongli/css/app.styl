@charset "UTF-8"
html {
    font-size: 13.33vw;
    height: 100%;
    padding: 0
    margin: 0
}
* {
    padding: 0
    margin: 0
}
.yhhd
    max-width 100%
    margin 0 auto 0
    background #071432
    padding-bottom 0.5rem
    .hd-banner
        width 100%
        background url("../img/banner.jpg") center center no-repeat 
        background-size cover
        height 0
        padding-top 32.1%
        padding-bottom 10%
    .hd-banTit
        width 90%
        font-size 0.24rem
        margin 0 auto
        background url("../img/arm.png") center center no-repeat 
        background-size contain
        font-size 0.2rem
        text-align center
        color #facd02
        line-height 0.4rem
        padding 0.16rem 0
    .hd-wbg
       background url("../img/footer.jpg") center top repeat
    .hd-wrap
        width 1100px
        margin 0px auto 1rem
        border 1px solid #2989cc
        padding 0.5rem 50px
    .hd-hr
        height:1px;
        border:none;
        border-top:1px dashed #0066CC
        margin 0.8rem auto 0.6rem
    .hd-tit
        margin 0rem  auto 0.4rem
        text-align: center
        color #feca05
        background url("../img/line.png") center center no-repeat 
        background-size contain
        font-size 0.28rem
        clear both
        position relative
        i
            width 8%
            height 2.5rem
            display: block
            position absolute
            top -0.9rem
            left -0.3rem
        .hd-titbg1
            background url("../img/tit1.png") center center no-repeat 
            background-size 100% auto
        .hd-titbg2
            background url("../img/tit1.png") center center no-repeat 
            background-size 100% auto
        .hd-titbg3
            background url("../img/tit1.png") center center no-repeat 
            background-size 100% auto
    .hd-con1
        background #07152c
        color #ffffff
        font-size 0.36rem
        padding 0.3rem
        letter-spacing 0.03rem
        text-align: center
        width 90%
        margin 0px auto
        strong
            color #feca05
    .hd-con2
        color #ffffff
        text-align center
        font-size 0.2rem
        strong
            color #feca05
    .hd-clis3
        width 100%
        margin 0.5rem auto
        overflow hidden
        li
            border 1px solid #318dce
            font-size: 0.2rem
            float left
            width 21%
            margin-left 4%
            list-style none
            text-align: center
            color #318dce
            background #07152c
            padding-bottom 0.2rem
            margin-top 0.5rem
            &:nth-child(1)
                margin-left 12%
            &:nth-child(3)
                margin-right 10%
            &:nth-child(4)
                margin-left 2%
           
    .hd-clTit
        color #ffffff
        background #0a1d48
        padding 0.08rem 0
        line-height: 0.3rem
        font-size: 0.2rem
        b
            color #feca05
    .hd-circleD
        background: #fdcb0b
        width 1.1rem
        height 1.1rem
        border-radius 0.6rem
        margin 0.3rem auto
        padding 0.06rem
    .hd-circleS
        background: radial-gradient(at center, #ffd100 0%, #ffd100 30%, #ff6f23 100%);
        width 0.98rem
        height 0.98rem
        border-radius 0.5rem
        border 1px solid #ff6825
        p
            padding-top 0.26rem
            color #6b2b0b
            font-size: 0.2rem
            text-align: center
            b
                font-size: 0.28rem
    .hd-conw
        margin-top 0.3rem
        border-left 1px #318dce solid
        border-right 1px #318dce solid
        border-bottom 1px #318dce solid
        overflow hidden
    .hd-ulCon
        width 25%
        float left
        overflow hidden
        color #c7b093
        li
            list-style none
            text-align center
            line-height 0.7rem
            font-size: 0.2rem 
            border-right 1px #318dce solid
            border-top 1px #318dce solid
            color #318dce
            &:first-child
                background #0a1d48
                color #ffffff
    .hd-ucw4
        li
            border-right none
    .hd-crem
        color #318dce
        line-height 0.6rem
    .hd-ruleList
        li
            list-style circle
            color #318dce
            font-size: 0.2rem
            line-height: 0.34rem
            padding-bottom 0.08rem
            list-style-type disc
               
@import "mob"

