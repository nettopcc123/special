@charset "UTF-8"
html {
    font-size: 13.33vw;
    height: 100%;
    padding: 0
    margin: 0
}
* {
    padding: 0
    margin: 0
}
.yhhd
    max-width 100%
    margin 0 auto 0
    background #b0fff5
    padding-bottom 0.3rem
    .hd-banner
        width 100%
        background url("../img/banner.jpg") center center no-repeat 
        background-size cover
        height 0
        padding-top 19%
        padding-bottom 9%
        font-size 0.24rem
        position relative
    .hd-wbg
        background #ff0;
        background: linear-gradient(#ffffff, #b0fff5)
        position relative
        z-index 10
    .hd-wrap
        width 1200px
        margin 0rem auto
        position relative
    .hd-tit
        font-size: 0.3rem
        text-align: center
        width 3.5rem
        height 0.5rem
        line-height 0.5rem
        background: linear-gradient(#2dc88a, #07a163)
        color #ffffff
        border-radius 0.3rem
        margin 0px auto
        box-shadow: 0px 0px 10px #b1f5e6
        position relative
        z-index 1
        border 3px solid #ffffff
    .hd-con
        padding 0.5rem 0.3rem 0.3rem
        background #ffffff
        margin-bottom 0.5rem
        margin-top -0.2rem
        overflow hidden
        border-radius 0.2rem
        box-shadow: 0px 0px 10px #b1f5e6
        z-index 0
        position relative
    .hd-conw
        overflow hidden
        text-align center
        font-size: 0.3rem
        min-height: 210px
        line-height: 210px;
    .hd-ulCon
        width 25%
        float left
        overflow hidden
        color #c7b093
        li
            list-style none
            text-align center
            line-height 0.7rem
            font-size: 0.2rem 
            color #333333
            &:first-child
                color #333333
                font-weight bold
    .hd-ucw2
        width 30%
    .hd-ucw3
        li
            color #fd2731
    .hd-ucw4
        width 20%
        li
            border-right none
            &:nth-child(2)
                line-height 0.36rem
                padding 0.6rem 0 0px
    .hd-ulCon1
        width 9%
        float left
        overflow hidden
        color #c7b093
        li
            list-style none
            text-align center
            line-height 0.7rem
            font-size: 0.2rem 
            color #333333
            &:first-child
                color #333333
                font-weight bold
    .hd-ucw5
        width 27%
    .hd-but
        background: linear-gradient(#ff745d, #c30101)
        background-size c30101
        color #fff
        width 2.6rem
        border-radius 0.3rem
        text-align center
        line-height: 0.6rem
        cursor pointer
        font-size: 0.24rem
        margin 0 auto
    .hd-gz
        width 94%
        margin: 0 auto
        li
            list-style circle
            color #333333
            font-size: 0.2rem
            line-height: 0.36rem
            list-style-type decimal
            padding-bottom: 0.08rem
@import "mob"

