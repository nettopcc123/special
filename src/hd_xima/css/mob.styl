@media only screen and (max-width:1024px)
    html
        font-size 70px

    .yhhd
        .hd-wrap
            padding 0 .2rem
@media only screen and (max-width:480px)
    html
        font-size 50px
    body
        overflow-x hidden
    .yhhd
        font-size .28rem
        .hd-banner
            height 4rem
            background-size contain
        .container
            .hd-wrap
                width 100%
                padding 0 .2rem
                .hd-box
                    height 11rem
                    margin 1rem 0 .5rem
                    padding .4rem 0rem
                    background-image none
                    .hd-item
                        padding 0
                        h2
                            width 3rem
                            line-height .6rem
                            font-size .34rem
                            top -1rem
                        .hd-single
                            width 100%
                            font-size .28rem
                            line-height .44rem
                            padding 0  .4rem .5rem
                            background-size 100% 100%
                            margin-bottom .3rem
                            &:nth-of-type(2)
                                margin 0

                            .img
                                height 3rem
                                background-size 2.2rem
                            .bigfont
                                font-size .3rem
                .rules
                    background-image url('../img/sj_rules.png')
                    padding 0 .4rem 1rem .7rem
                    ul
                        font-size .28rem
                        padding 0 .1rem
                        li
                            line-height .5rem

                h1
                    line-height .5rem
                    padding .1rem 0 .8rem
                    span
                        font-size .36rem
                        line-height .8rem
                        background-size 100% 100%
                    b
                        font-size .38rem
                        margin .5rem 0 .4rem
