.yhhd
    font-size .16rem
    max-width 19.2rem
    overflow-x hidden
    margin 0 auto
    line-height 1.4
    background #0c0c32 url("../img/pc_bg.png?v12") no-repeat center top/cover
    color $c1
    *
        box-sizing border-box
        margin 0
    .hd-banner
        height 5rem
        background url("../img/pc_banner.png?v12") no-repeat center/8rem
    .container
        width 100%
        .hd-wrap
            max-width 12rem
            margin 0 auto
            font-size .24rem
            .hd-box
                width 100%
                height 5.4rem
                background url('../img/box_bg.png') no-repeat center top /110% 100%
                color #eaca93
                .hd-item
                    border-radius .1rem
                    padding 1rem 3rem
                    position relative
                    &:after
                        content ''
                        display block
                        clear both
                        visibility hidden
                    h2
                        width 2rem
                        line-height .4rem
                        font-size .26rem
                        border 3px solid #dccba5
                        background #212045
                        border-radius .1rem
                        color #baa594
                        text-align center
                        position absolute
                        left 50%
                        top .2rem
                        transform translateX(-50%)

                    .hd-single
                        width 46%
                        padding .2rem
                        line-height .24rem
                        font-size .14rem
                        text-align center
                        background #1f1a20 url('../img/item_bg.png') no-repeat left top / 100% 100%
                        float left
                        &:nth-of-type(2)
                            margin-left .3rem
                            .img
                                background-image url('../img/a2.png')

                        .img
                            height 1.4rem
                            margin-bottom .3rem
                            background url('../img/a1.png') no-repeat center / 1.2rem
                        .bigfont
                            color #fbe9d0
                            font-size .16rem
