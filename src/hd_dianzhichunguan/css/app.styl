@charset "UTF-8"
html
    font-size 100px
body
    margin 0
    padding 0
    font-family -apple-system, BlinkMacSystemFont, "PingFang SC","Helvetica Neue",STHeiti,"Microsoft Yahei",Tahoma,Simsun,sans-serif;
    font-size: .2rem;
    color: #ccc;
* {
    padding: 0
    margin: 0
}
.yhhd
    max-width 100%
    margin 0 auto 0
    background #0a0a11
    padding-bottom 0.5rem
    .hd-banner
        width 100%
        background url("../img/banner.jpg") center center no-repeat 
        background-size cover
        height 0
        padding-top 27.55%
        font-size 0.24rem
        position relative
    .hd-but
        background #fd2731
        background-size cover
        color #fff
        width 12%
        border-radius 0.05rem
        text-align center
        float: right
        margin-right 26%
        line-height: 0.5rem
        cursor pointer
    .hd-wbg
       background url("../img/footer.jpg") center top no-repeat #0a0a11
       padding-bottom 1.6rem
       padding-top 0.6rem
    .hd-wrap
        width 1200px
        margin -2rem auto 0
        position relative
        overflow: hidden;
    .hd-tit
        width 3.5rem
        height 0rem
        padding 16% 0 0 16%
        background url("../img/tit1.png") center center no-repeat
        background-size contain
        margin 0 auto -0.8rem
        position relative
        z-index 10
    .hd-con
        padding 1rem 0.3rem 0.3rem 0.3rem
        background rgba(22,22,32,0.8)
        margin-bottom 0.5rem
    .hd-codt
        padding 0.1rem 0
        font-size 0.2rem
        color #e0a42c
        p
            padding-bottom 0.1rem
            overflow hidden
            b
                float left
                max-width 15%
            span
                float left
                max-width 85%
            em
                font-style normal
                color #db1515
    .hd-pcHid
        display none
    .hd-conw
        border-left 1px #090909 solid
        border-right 1px #090909 solid
        border-bottom 1px #090909 solid
        overflow hidden
    .hd-ulCon
        width 19%
        float left
        overflow hidden
        color #c7b093
        li
            list-style none
            text-align center
            line-height 0.7rem
            font-size: 0.2rem 
            border-right 1px #090909 solid
            border-top 1px #090909 solid
            color #e0a42c
            &:first-child
                background #19192c
                color #e0a42c
    .hd-ucw1
        width 14%
    .hd-ucw2
        width 22%
    .hd-ucw3
        width 14%
        li
            color #db1515
    .hd-ucw4
        width 22%
        li
            color #db1515
    .hd-ucw5
        width 14%
        li
            &:nth-child(2)
                line-height: 0.26rem
                padding 2.46rem 0
    .hd-ucw6
        width 14%
        li
            border-right none
            &:nth-child(2)
                line-height: 0.26rem
                padding-top 2.8rem               
    .hd-crem
        padding 0.1rem 0
        color #62553a
        font-size 0.2rem
        line-height 0.3rem
        clear both
        overflow hidden    
    .hd-tit01
        width 3.5rem
        height 0rem
        padding 16% 0 0 16%
        background url("../img/tit2.png") center center no-repeat
        background-size contain
        margin 0 auto -0.8rem
        position relative
        z-index 10
    .hd-con01
        padding 1rem 0.3rem 0.3rem 0.3rem
        background rgba(22,22,32,0.8)
        margin-bottom 0.5rem
    .hd-gz
        width 94%
        margin: 0 auto
        li
            list-style circle
            color #e0a42c
            font-size: 0.2rem
            line-height: 0.36rem
            list-style-type decimal
            padding-bottom: 0.08rem
    .hd-clear
        clear both
            
@import "mob"

