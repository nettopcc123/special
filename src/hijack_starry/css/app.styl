@charset "UTF-8"

html
    font-size 100px
    background url('../img/pc_banner.jpg?v=2019182054') no-repeat center top #000000

*
    box-sizing border-box
    margin 0
    font-size inherit
    
body
    margin 0
    font-size .12rem
    text-align justify
    line-height 1.7
    height 100%
    font-family -apple-system, BlinkMacSystemFont, "PingFang SC","Helvetica Neue",STHeiti,"Microsoft Yahei",Tahoma,Simsun,sans-serif;
    



$c1 = #c3964f

.hd-btn
    line-height .3rem
    display block
    text-align center
    border-radius .02rem
    border 1px solid #9d870f
    margin .1rem 0
    color #333
    cursor pointer
    font-size 1.2em
    &.wait
        filter grayscale(100%)
        opacity .8
    &:hover
        opacity .85
    &.active
        color #fff
        background url("../img/btn_bg.jpg?v=2019182054") no-repeat center/100% 100%
.tit
    line-height .3rem
    font-size .1rem
    color red

.none
    display none

.bg
    background url('../img/pc_banner.jpg') no-repeat center top / 100% 7rem
    margin-bottom: 2rem;
    .hd-logo
        height .5rem
        margin-top .2rem
        background url("../img/logo.svg") no-repeat center/contain
    .xp
        width 7rem
        padding-top .3rem
        margin 0 auto
        .reg

            h1
                font-size 1.4em
                text-align center
                background url("../img/line.png") no-repeat center/contain
                margin .3rem 0 .1rem 0
                &::after
                &::before
                    content ''
                    position absolute
                    width .3rem
                    height .3rem
            h2
                text-align center
                line-height .34rem

            .right p
                text-indent 2em
                font-size .11rem
                i
                    cursor default
                    color #ff0000
                    padding 0px 5px
                    font-style normal
            a
                color #ff0000
                font-size .14rem
                text-decoration none
                cursor pointer
                padding 0 5px
                &.hd-btn1
                    display block
                    width 2rem
                    height 1rem
                    margin .3rem auto
            .first
                display none

            .hd-btn1
                height 1rem
                margin-top .2rem
                background url("../img/btn-discounts.png") no-repeat center/contain
                cursor pointer
                &:hover
                    opacity .85

    .clearfix:after
        content ""
        height 0
        line-height 0
        display block
        visibility hidden
        clear both
    .clearfix
        zoom 1

    ul.inp
        margin-top .1rem
        padding 0
        list-style none
        &[type="0"] li:nth-child(4)
        &[type="1"] li:nth-child(2)
        &[yzm="0"] li:nth-child(5)
            display none
        li
            padding-bottom .05rem
            position relative
            b
                position absolute
                left -.4rem
                font-size .9em
                top .03rem
                font-weight normal
                color #fff
            img
            .btn
                background $c1
                color #fff
                position absolute
                top 0
                line-height .25rem
                right 0
                text-align center
                width 40%
                font-size .1rem
                border 1px solid #0000020
                height .25rem
                &.wait
                    background #999
        input
            width 100%
            height .25rem
            background #fff
            border 1px solid #0000020
            padding .02rem .02rem .02rem .1rem
            font-size .09rem
            &.yzm
            &.yzt
                width 60%
    .tips
        color #f50
        font-size .1rem
        white-space nowrap

.is_pc
    .xp .reg
        width 7rem
        //border 1px solid #eec
        padding .1rem
        color #fff
        background rgba(0,0,0,.7)
        .left
        .right
            width 50%
            float right
            padding .1rem .2rem
        .right
            float left
        .left
            padding .3rem .5rem .1rem .7rem

    [onclick]
        cursor pointer

    .right
        h1

            font-size .2rem
            text-align center
            background url("../img/line.png") no-repeat center/contain

        ul
            list-style none
            padding 0
            margin .05rem 0
        p
            font-size .1rem
            cursor pointer
            i
                font-size .14rem
                font-style normal
                margin -.05rem .05rem 0 0
            *
                vertical-align middle
            b
                color $c1
    .account-r
        width 50%
        float left
        padding .4rem .5rem 0 .7rem
    .bg
        margin-bottom: 1rem;
    .fix-box
        height: .7rem;
        padding-left: .2rem;
        padding-right: .2rem;
        cursor:pointer
        .txt
            width: 58%;
            text-align: center;
            b
                font-size: .3rem;
            p 
                font-size: .18rem;
        .download
            padding: 7px 23px;
            margin-top: .2rem;
            font-size: .14rem;
        .img
            width: .6rem;
            height: .6rem;
            margin-left: 63px;
            float: left;
            top: 10px;

.net
    padding 0 .3rem
    color #e1c687
    font-weight bold
    .net-item
        width 2rem
        margin-top .2rem
        text-align center
        background url('../img/icon1.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
        padding-top 1rem
        margin-right .1rem
        float left
        &:nth-of-type(2)
            background url('../img/icon2.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
        &:nth-of-type(3)
            background url('../img/icon3.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
            margin-right 0
        &:nth-of-type(4)
            background url('../img/alipay.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
        &:nth-of-type(5)
            background url('../img/wechat.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
        &:nth-of-type(6)
            background url('../img/bocai.png?v=2019182054') no-repeat center .1rem / 1.2rem .8rem
            margin-right 0
.fix-box
    background: linear-gradient(#d21010,#a70707);
    color: #fff;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2rem;
    padding-left: .2rem;
    padding-right: .2rem;
    .txt
        width: 55%;
        float: left;
        p
            line-height: 1.4;
            font-size: .35rem;
        .pp
            font-weight: 550
        b
            font-size: .8rem;
            padding: .1rem;
            font-family: monospace;
    .download
        float: left;
        padding: .15rem .3rem;
        background: #d2b44d;
        border-radius: 4px;
        margin-top: .56rem;
        font-size: .36rem;
    .img
        display: inline-block;
        width: 1.7rem;
        height: 1.7rem;
        background: url(https://xpj.imagebei.com/hd/app_download/img/app_down.png) no-repeat;
        background-size: cover;
        position: relative;
        top: 6px;
        right: 2px;
        float: right;
    







