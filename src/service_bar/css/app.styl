@charset "UTF-8";
#showSide, #showSide div, #showSide span, #showSide p, #showSide a{
    padding:0px;
    margin:0px;
}
#showSide .fix-menu {
    position: fixed;
    z-index: 102;
    bottom: 325px;
    right: 5px;
    transform: translateY(-50%);
}

#showSide .fix-menu a {
    display: block;
    width: 40px;
    height: 40px;
    margin-top: 10px;
    background: #fff;
    border: 1px solid #c2a77d;
    border-radius: 4px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
    position: relative;
    transition: all 0.5s;
    cursor: pointer;
    position relative;
    z-index: 101;
}

#showSide .fix-menu a:hover {
    background: #c2a77d;
    text-decoration: none;
    text-shadow: none;
}

#showSide .fix-menu a:hover i {
    opacity: 0
}

#showSide .fix-menu .wxewm {
    opacity: 1;
    display: block
}

#showSide .fix-menu a span {
    color: #fff
}

#showSide .fix-menu a b,#showSide .fix-menu a i {
    position: absolute;
    z-index: 2;
    top: 0;
}

#showSide .fix-menu a i {
    width: 30px;
    height: 30px;
    top: 5px;
    left: 5px;
    background: url("../img/kefu.svg") no-repeat center/contain;
}

#showSide .fix-menu a i.ic-wx {
    background-image: url("../img/weixin.svg");
}

#showSide .fix-menu a i.ic-tel {
    background-image: url("../img/call.svg");
}

#showSide .wxewm {
    width: 150px;
    height: 150px;
    line-height: 0px;
    font-size: 0px;
    color: #c2a77d;
    background: #fff;
    box-shadow: 0 0 5px rgba(0, 0, 0, .3);
    right: 56px;
    bottom 315px;
    display: none;
    position: fixed;
    z-index 1003
}
#showSide .wecico{
    position: absolute;
    top:-24px!important;
    right:0px;
}
#showSide .wxewm img{
    max-width 100%
}
#showSide .fix-menu a:nth-child(2) b {
    height: auto;
}

#showSide .fix-menu a b img {
    width: 100%;
}

#showSide .fix-menu-xs {
    position: fixed;
    z-index: 100;
    bottom: 444px;
    right: 56px;
    left: 0;
    display: none;
}

#showSide .fix-menu-xs .backdrop {
    z-index: 10001;
    background: rgba(0, 0, 0, 0);
    right: 56px;
    opacity: 1;
    width: 50px;
    height: 50px;
    float: right;
    position: fixed;
    cursor: pointer;
}

#showSide .fix-menu-xs .box {
    position: absolute;
    z-index: 3;
    top: 0px;
    background: #fff;
    width: 200px;
    height: auto;
    padding: 20px;
    border-radius: 2px;
    right: 0;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
}

#showSide #xmTel .box {
    text-align: center;
}

#showSide #xmTel .avatar {
    width: 80px;
    height: 80px;
    background: url("../img/kefu3.svg") no-repeat center bottom/80%;
    border-radius: 50%;
    box-shadow: 0 10px 10px #ddd;
    margin: -20px auto 5px auto;
}

#showSide #xmTel h2 {
    margin: 10px 0px 0px 0px;
    font-size: 16px;
    height: 26px;
    font-weight: normal;
}

#showSide #xmTel h6 {
    margin: 0 0px 5px 0px;
    font-size: 14px;
    border-bottom: 1px solid #c2a77d;
    margin-bottom: 10px;
    font-weight: normal;
}

#showSide #xmTel input {
    width: 158px;
    padding: 5px;
    border: 1px solid #c2a77d;
    margin-top: 10px;
    font-size: 12px;
}

#showSide #xmTel p {
    font-size: 12px;
    margin: 0;
    line-height: 1.6;
}

#showSide #xmTel .sidebtn {
    margin: 10px auto;
    display: block;
    line-height: 35px;
    padding: 0;
    background: #cb9c51;
    color: #fff;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
}

#showSide #xmTel i.ic-close {
    background-color: #fff;
    background-image: url("../img/close2.svg");
    width: 24px;
    height: 24px;
    top: 10px;
    cursor: pointer;
}

#showSide #lxkefu {
    position: fixed;
    z-index: 99;
    background: #fff;
    width: 510px;
    height: 550px;
    right: 56px;
    bottom: 0;
    display: none;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
}

#showSide i.ic-close {
    position: absolute;
    z-index: 3;
    width: 30px;
    height: 30px;
    border-radius: 4px;
    background: #439aea url("../img/close.svg") no-repeat center/70%;
    right: 10px;
    top: 15px;
}
#showSide i.ic-close2 {
    background-color: #fff;
    background-image: url("../img/close2.svg");
    width: 20px;
    height: 20px;
    top: 10px;
    cursor: pointer;
}

#showSide #lxkefu iframe {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 0;
    opacity: 1;
}

#showSide .kfh24 {
    line-height: 16px;
    padding-top: 4px;
    display: block;
}

#showSide .rem {
    font-size: 12px;
    color: #f00;
}
#showSide .butdisable{
    background: #999!important;
    color: #fff!important;
}


/* 屏幕小于750px */

@media screen and (min-width: 320px) and (max-width: 999px) {
    #showSide .fix-menu {
        position: fixed;
        z-index: 1002;
        bottom: 200px;
        right: 5px;
        transform: translateY(-50%);
    }
    #showSide .fix-menu-xs {
        position: fixed;
        z-index: 1002;
        bottom: 325px;
        right: 0px;
    }
    #showSide #lxkefu {
        right: 0px;
    }
    #showSide .fix-menu-xs .backdrop{
        right:0px;
    }
    #showSide .wxewm {
    position: fixed;
    bottom: 190px;
}
}